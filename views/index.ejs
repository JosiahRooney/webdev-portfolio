                                    function titleCase(str) {
                                      var arr = str.toLowerCase().split(' ');
                                      for (var i = 0; i < arr.length; i++) {
                                        arr[i] = arr[i][0].toUpperCase() + arr[i].substr(1);
                                      }
                                      arr = arr.join(' ');
                                      return arr;
                                    }
                                </code>
